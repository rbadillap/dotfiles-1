set clipboard=unnamed
set belloff=all
set noswapfile
set wildignore+=*.pyc
set path+=**
set tabstop=2
set softtabstop=2
set expandtab  " causes spaces to be used in place of tab characters
set shiftwidth=2
set hidden
set wildmode=longest:full,full
set relativenumber
set number
set numberwidth=2
set cursorline
set ignorecase
set smartcase

set list
set listchars=trail:•,tab:▸\   " Mark trailing whitespaces and tabs.

set linebreak
set breakindent
let &showbreak='…'
