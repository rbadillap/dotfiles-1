#!/bin/bash

path="$HOME/svn/helic-admin"
test_path="$path/helic-admin-test-integration"
tomcat_path="$test_path/target/tomcat/webapps/helicSolutionBase/META-INF"
resource_path="$HOME/svn/helic-admin/helic-admin/src/main/resources/META-INF/web/dist"

echo "Updating ftl symlinks"
fftl

echo "Symlink pages and resources"
ln -sf "$HOME/svn/ftl-symlinks" "$tomcat_path/ftl-admin"
ln -sf "$resource_path" "$tomcat_path/resources"
